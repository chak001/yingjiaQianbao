<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_titlebar"/>
    
    <TextView
        android:id="@+id/tips"
        android:paddingLeft="10dp"
        android:privateImeOptions="10dp"
        android:textSize="10dp"
        android:gravity="center"
        android:text="@string/personal_tip"
        android:textColor="@color/white"
        android:background="@color/dot_color"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    
    <TextView
        android:id="@+id/process"
        android:text="22%"
        android:textColor="@color/dot_color"
        android:textSize="25dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/words"
        android:text="@string/words"
        android:textColor="@color/dot_color"
        android:textSize="11dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/process_bar"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="24dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="22" />

    <com.example.customview.tabmenu.TabsMenu
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/tabs_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.customview.tabmenu.TabsMenu>


    <android.support.v4.view.ViewPager
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/Login_viewpager"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/checkbotton"
        android:layout_marginTop="14dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundcorner_blue"
        android:text="@string/submit"
        android:layout_width="314dp"
        android:layout_height="38dp" />


</LinearLayout>