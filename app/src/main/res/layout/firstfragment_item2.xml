<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="117dp">


    <FrameLayout
        android:id="@+id/rootview"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/wrap_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="12dp"
                android:id="@+id/user_icon"
                android:scaleType="centerCrop"
                android:src="@mipmap/company_icon"
                android:layout_width="39dp"
                android:layout_height="39dp" />

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/user_icon"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="39dp">
                <TextView
                    android:id="@+id/nick_name"
                    android:text="借贷宝"
                    android:textSize="14dp"
                    android:textColor="@color/match_normal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/discribetion"
                    android:textSize="11dp"
                    android:layout_alignParentBottom="true"
                    android:text="@string/defaultdesc"
                    android:textColor="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/peoplennum"
                android:textColor="@color/hintcolor"
                android:text="243人已贷"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/linearLayout"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/moneyrange"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="5k-10k"
                    android:textColor="@color/dot_color" />

                <TextView
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/feature1"
                    android:textColor="@color/hintcolor" />
            </RelativeLayout>

            <View
                android:background="@color/linecolor"
                android:layout_width="1dp"
                android:layout_height="30dp"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/quicktime"
                    android:textSize="11dp"
                    android:text="2天"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dot_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/feature2"
                    android:textColor="@color/hintcolor" />
            </RelativeLayout>
            <View
                android:background="@color/linecolor"
                android:layout_width="1dp"
                android:layout_height="30dp"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lilv"
                    android:textSize="11dp"
                    android:text="0.03%"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/dot_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/feature3"
                    android:textColor="@color/hintcolor" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
